<Application
    x:Class="Rightpoint.Peeps.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Rightpoint.Peeps.Client.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
            <converters:FaceLandmarkToWidthConverter x:Key="LandmarkToWidthConverter" />
            <converters:FaceLandmarkToHeightConverter x:Key="LandmarkToHeightConverter" />
            <converters:FaceToVisibillityConverter x:Key="FaceToVisibillityConverter" />
            <converters:CountZeroValueConverter x:Key="CountIsZeroValueConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/Base.xaml"/>
                <ResourceDictionary Source="/Theme/Brushes.xaml"/>
                <ResourceDictionary Source="/Theme/Fonts.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
