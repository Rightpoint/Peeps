<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font Families -->
    <Style TargetType="TextBlock" x:Key="FontBold">
        <Setter Property="FontFamily" Value="ms-appx:/Fonts/KulturistaBold.otf#Kulturista"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="FontLight">
        <Setter Property="FontFamily" Value="ms-appx:/Fonts/KulturistaLight.otf#Kulturista"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="FontRegular">
        <Setter Property="FontFamily" Value="ms-appx:/Fonts/KulturistaMedium.otf#Kulturista"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="FontSemiBold">
        <Setter Property="FontFamily" Value="ms-appx:Fonts/KulturistaSemibold.otf#Kulturista"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="FontThin">
        <Setter Property="FontFamily" Value="ms-appx:Fonts/KulturistaThin.otf#Kulturista"></Setter>
    </Style>

</ResourceDictionary>
