<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Override -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="ms-appx:///Fonts/KulturistaMedium.otf#Kulturista" />
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#f7f4f0"/>
    </Style>

    <Style TargetType="RelativePanel">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style TargetType="FlipView">
        <Setter Property="Background" Value="{StaticResource SemiTransparentNotBlack}"/>
    </Style>


    <!-- Common -->
    <Style x:Key="Heading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontFamily" Value="ms-appx:///Fonts/KulturistaSemibold.otf#Kulturista"/>
    </Style>

    <Style x:Key="Subheading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="ms-appx:///Fonts/KulturistaMedium.otf#Kulturista"/>
    </Style>

    <Style x:Key="FramePeeps" TargetType="Frame">
        <Setter Property="MaxHeight" Value="400"/>
        <Setter Property="MaxWidth" Value="1020"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="{StaticResource OffWhite}"/>
    </Style>

</ResourceDictionary>

